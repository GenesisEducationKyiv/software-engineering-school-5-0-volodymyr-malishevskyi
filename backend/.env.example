# Server Configuration
PORT=3030
NODE_ENV=development
APP_URL=http://localhost:3030

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5434/weather?schema=public

# Email Configuration (SMTP)
SMTP_FROM=Weather App <noreply@weather.app>
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Cron jobs for weather broadcasts
# Format: [["frequency", "cron_expression"], ...]
BROADCAST_CRONS=[["daily", "0 8 * * *"],["hourly", "0 * * * *"]]


# Weather API Providers Configuration
# At least one provider must be configured

# WeatherAPI.com (Primary provider - priority 1)
WEATHER_API_KEY=your_weatherapi_key_here
WEATHER_API_PRIORITY=1

# OpenWeatherMap (Fallback provider - priority 2)  
OPENWEATHER_API_KEY=your_openweathermap_key_here
OPENWEATHER_PRIORITY=2